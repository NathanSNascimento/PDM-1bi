<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="143dp" app:srcCompat="@drawable/logo_alt"
                android:id="@+id/image_logo"
                app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="Homens:"
                android:layout_width="85dp"
                android:layout_height="42dp"
                android:id="@+id/text_mens" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/image_logo" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textStyle="normal|bold" android:textSize="18sp" android:gravity="center"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.3"/>
        <TextView
                android:text="Mulheres:"
                android:layout_width="85dp"
                android:layout_height="42dp"
                android:id="@+id/text_woman"
                android:textStyle="normal|bold" android:textSize="18sp" android:gravity="center"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/text_mens" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.3"/>
        <TextView
                android:text="CrianÃ§as:"
                android:layout_width="85dp"
                android:layout_height="42dp"
                android:id="@+id/text_woman2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.3"
                android:textStyle="normal|bold" android:textSize="18sp" android:gravity="center"
                android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/text_woman"/>
        <Button
                android:text="Calcular"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_calc" android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_Crianca" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                style="@android:style/Widget.Button.Small"/>
        <EditText
                android:layout_width="85dp"
                android:layout_height="42dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/edit_homens"
                app:layout_constraintStart_toEndOf="@+id/text_mens"
                android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/image_logo"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.0"/>
        <EditText
                android:layout_width="85dp"
                android:layout_height="42dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/edit_mulher"
                app:layout_constraintStart_toEndOf="@+id/text_woman"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_homens"/>
        <EditText
                android:layout_width="85dp"
                android:layout_height="42dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/edit_Crianca"
                app:layout_constraintStart_toEndOf="@+id/text_woman2"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_mulher" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.0"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
